<div class="card">
  <div class="card-body">
    <h2 class="card-title d-flex justify-content-between mb-4">
      <span>Projects</span>
      <%= link_to 'New Project', new_project_path, class: 'btn btn-outline-primary' %>
    </h2>

    <% @projects.each do |project| %>
      <%= link_to project, class: 'text-decoration-none text-dark' do %>
        <div class="card project-card border-info mb-3">
          <div class="card-body">
            <div class="mb-3">
              <span class="badge"><%# project.status%></span>
              <span class="text-secondary">
                <small></small>
              </span>
            </div>
            <h5 class="card-title"><b><%= project.name %></b></h5>
            <p class="text-secondary"><%= project.description %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
