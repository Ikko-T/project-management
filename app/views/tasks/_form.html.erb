<%= render "layouts/error_message" %>

<%= form_with model: [@task.project, @task], local: true do |form| %>
  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name, class: 'form-control', placeholder: 'Enter task name...' %><br>
  </div>

  <div class="form-group">
    <%= form.label :description %><br>
    <%= form.text_field :description, class: 'form-control' %><br>
  </div>

  <div class="form-group">
    <%= form.label :status %><br>
    <%= form.select :status, select_status, {}, class: 'form-control' %><br>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary form-control' %>
  </div>
<% end %>
